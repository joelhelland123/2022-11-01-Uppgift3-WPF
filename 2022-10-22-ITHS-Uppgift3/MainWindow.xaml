<Window x:Class="_2022_10_22_ITHS_Uppgift3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2022_10_22_ITHS_Uppgift3"
        mc:Ignorable="d"
        Title="Servering" Height="550" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ListBox Name="bokningsBox" Width="300" Grid.Column="1" Grid.Row="1" FontSize="12" Margin="0,0,0,0" Grid.RowSpan="10"></ListBox>
        <TextBlock Grid.Row="3" Grid.Column="2" Text ="Datum" FontSize="20" Margin="50,0,0,0"/>
        <TextBlock Grid.Row="3" Grid.Column="3" Text ="Namn" FontSize="20" Margin="50,0,0,0"/>

        <DatePicker Name="datepick" Grid.Row="4" Grid.Column="2" Height="40" Width="200" FontSize="20" Margin="50,0,0,0"/>
        <TextBox Name="nameBox" Grid.Row="4" Grid.Column="3" Width="150" FontSize="20" Margin="50,0,50,0" />
        <Button Name="btn_boka" Content="Boka" FontSize="20" Grid.Row="8" Grid.Column="2" Height="50" Margin="50,10,20,0" Click="btn_boka_Click"/>

        <TextBlock Grid.Row="5" Grid.Column="2" Text="Tid" FontSize="20" Margin="50, 50,0,0"/>
        <TextBlock Grid.Row="5" Grid.Column="3" Text="Bordsnummer" FontSize="20" Margin="50,50,0,0"/>

        <ComboBox Name="tidCombo" Grid.Row="6" Grid.Column="2" Margin="50,10,20,0" Height="50" FontSize ="20" ItemsSource="{Binding tider}"/>
        <ComboBox Name="bordCombo" Grid.Row="6" Grid.Column="3" Margin="50,10,20,0" Height="50" FontSize ="20" ItemsSource="{Binding bord}"/>

        <Button Name="btn_visaBokningar" Content ="Visa Bokningar" FontSize="20" Grid.Row="9" Grid.Column="2" Height="50" Margin="50,25,20,0" Click="btn_visaBokningar_Click"/>
        <Button Name="btn_avboka" Content="Avboka" FontSize="20" Grid.Row="11" Grid.Column="1" Height="50" Margin="10,25,20,10" Click="btn_avboka_Click"/>
        <Button Name="btn_saveFile" Content= "Spara till fil" FontSize="20" Grid.Row="10" Grid.Column="3" Height="50" Margin="50,25,20,10" Click="btn_saveFile_Click"/>
        <Button Name ="btn_readFile" Content="Läs från fil" FontSize="20" Grid.Row="10" Grid.Column="2" Height="50" Margin="50,25,20,10" Click="btn_readFile_Click" />
    </Grid>
</Window>
    
